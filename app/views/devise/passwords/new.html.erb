<div class="container p-5">
  <h2 class="display-5">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'row g-3' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col-md-12">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="col-md-12">
      <%= f.submit "Send me reset password instructions", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
